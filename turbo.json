{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "start": {
      "dependsOn": ["build"],
      "outputs": [],
      "env": [],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["VERCEL_URL", "BASE_URL", "PORT", "DATABASE_URL", "SECRET", "LOOPS_API_KEY"]
    },
    "test": {
      "outputs": [],
      "env": []
    },
    "sb:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "env": ["IS_STORYBOOK"]
    },
    "sb:test": {
      "dependsOn": ["sb:build"]
    },
    "playwright:test": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**"],
      "env": ["CI"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
